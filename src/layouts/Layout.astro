--- 
import '../styles/global.css'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<aside class="sidebar"><slot name="sidebar"/></aside>
			<article class="genres"><slot name="genres"/></article>
			<article class="player"><slot name="player"/></article>
		</main>
	</body>
</html>
<style>
	main {
		background-color: var(--blue-1);
		height: 100dvh;
		display: grid;
		grid-template-areas: 
			"sidebar genres"
			"sidebar player"
		;
		grid-template-columns: minmax(max-content, 200px) auto;
		gap: 10px;
	}
	.sidebar, .genres, .player {
		padding: 20px;
		border-radius: 10px;
		background-color: var(--gray-1)
	}
	.sidebar {
		grid-area: sidebar;
	}
	.genres {
		grid-area: genres;
	}
	.player {
		grid-area: player;
	}

</style>
